<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">


    <Button
        android:id="@+id/btn_eulji"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:layout_marginTop="282dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_eulji"
        android:drawableLeft="@drawable/euljibtnimgxml"
        android:fontFamily="@font/scdreamheavy"
        android:text="을지"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_haru"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_haru"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/btn_haru"
        android:drawableLeft="@drawable/harubtnimgxml"
        android:fontFamily="@font/scdreamheavy"
        android:text="하루"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_eulji" />

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="158dp"
        android:fontFamily="@font/scdreamregular"
        android:text="반갑습니다,            님!"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="0dp"
        android:text="이소원."
        android:textColor="#082E6A"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hello"
        app:layout_constraintEnd_toEndOf="@+id/tv_hello" />
</androidx.constraintlayout.widget.ConstraintLayout>